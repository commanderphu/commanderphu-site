{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "**/*.astro"
  ],
  "exclude": ["dist"]
}
