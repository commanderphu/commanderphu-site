---
const links = [
  { name: "Home", href: "/" },
  { name: "Twitch", href: "/twitch" },
  { name: "Spotify", href: "/spotify" },
  { name: "Commands", href: "/commands" },
  { name: "Status", href: "/status" },
];
---

<nav class="w-full fixed top-0 left-0 z-50 backdrop-blur-md bg-[#0b0e13]/60 border-b border-[#1f2430]">
  <div class="max-w-5xl mx-auto px-4 py-4 flex items-center justify-between">
    
    <!-- Brand -->
    <div class="text-[#37bdf8] text-xl font-bold tracking-wide drop-shadow-[0_0_10px_#37bdf88]">
      CommanderPhu
    </div>

    <!-- Links -->
    <ul class="flex items-center gap-6 text-[#e8f1ff]">
      {links.map((link) => (
        <li>
          <a 
            href={link.href}
            class="hover:text-[#37bdf8] transition-all hover:drop-shadow-[0_0_10px_#37bdf88]"
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>

  </div>
</nav>
